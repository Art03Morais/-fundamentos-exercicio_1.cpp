#include <iostream>
#include <fstream>
#include <string>

using namespace std;

int main() {
    ifstream inputFile("mochileiro.txt");

    if (!inputFile) {
        cerr << "Erro ao abrir o arquivo mochileiro.txt" << endl;
        return 1;
    }

    char targetChar;
    cout << "Digite o caractere que deseja contar: ";
    cin >> targetChar;

    string line;
    int lineNumber = 1;

    while (getline(inputFile, line)) {
        int count = 0;
        for (char ch : line) {
            if (ch == targetChar) {
                count++;
            }
        }
        cout << "Linha " << lineNumber << ": " << count << " ocorrÃªncias do caractere '" << targetChar << "'" << endl;
        lineNumber++;
    }

    inputFile.close();

    return 0;
}
