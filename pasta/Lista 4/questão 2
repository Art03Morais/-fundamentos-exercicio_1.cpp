#include <iostream>
using namespace std;

int main() {
    // Padr達o (a)
    for (int i = 1; i <= 10; ++i) {
        for (int j = 1; j <= i; ++j) {
            cout << "*";
        }
        cout << "\n";
    }
    cout << "\n";

    // Padr達o (b)
    for (int i = 10; i >= 1; --i) {
        for (int j = 1; j <= i; ++j) {
            cout << "*";
        }
        cout << "\n";
    }
    cout << "\n";

    // Padr達o (c)
    for (int i = 10; i >= 1; --i) {
        for (int j = 10; j >= i; --j) {
            cout << " ";
        }
        for (int k = 1; k <= i; ++k) {
            cout << "*";
        }
        cout << "\n";
    }
    cout << "\n";

    // Padr達o (d)
    for (int i = 1; i <= 10; ++i) {
        for (int j = 10; j >= i; --j) {
            cout << " ";
        }
        for (int k = 1; k <= i; ++k) {
            cout << "*";
        }
        cout << "\n";
    }
    cout << "\n";

    return 0;
}
